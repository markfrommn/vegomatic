    "version": "0.2.2",
    "configurations": [
        {
            "name": "Python Debugger: Test DataFetch",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/example_datafetch.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--dburl=sqlite://./foo.db",
                "--showdata",
                "--showfields",
                "--datafile=somedata.json",
                "--createdb",
                "--table=prs",
                "--insertmethod=insert"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Github Repos",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/github_fetch.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--organization=psols",
                "--fetch=repos",
                "--format=json",
                "--limit=10"
            ]
        },
        {
            "name": "Python Debugger: Github PRs",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/github_fetch.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--organization=psols",
                "--repository=psols-dev",
                "--fetch=repoprs",
                "--format=json",
                "--limit=10"
            ]
        },
        {
            "name": "Python Debugger: Linear Teams Fetch",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/linear_fetch.py",
            "console": "integratedTerminal",
            "args": [
                "--fetch=teams",
                "--format=table"
            ]
        },
        {
            "name": "Python Debugger: Linear Issues Fetch",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/linear_fetch.py",
            "console": "integratedTerminal",
            "args": [
                "--fetch=issues",
                # Note this is a random UUID as an example
                "--team=70812e88-ca11-49be-8d0a-71887bab27a1",
                "--limit=100",
                "--format=table"
            ]
        },
        {
            "name": "Python Debugger: Linear Team Issues Fetch",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/linear_fetch.py",
            "console": "integratedTerminal",
            "args": [
                "--fetch=teamissues",
                # Note this is a random UUID as an example
                "--team=70812e88-ca11-49be-8d0a-71887bab27a1",
                "--limit=100",
                "--format=table"
            ]
        },
        {
            "name": "Python Debugger: Linear Single Issue Fetch",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/linear_fetch.py",
            "console": "integratedTerminal",
            "args": [
                "--issue=XZY-123",
                "--format=json"
            ]
        }
    ]
}
