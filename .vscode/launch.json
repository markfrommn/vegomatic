    "version": "0.2.2",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Github Fetch",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/github_fetch.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--organization",
                "psols",
                "--print-query"
            ]
        },
        {
            "name": "Python Debugger: Linear Teams Fetch",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/linear_fetch.py",
            "console": "integratedTerminal",
            "args": [
                "--fetch=teams",
                "--format=table"
            ]
        },
        {
            "name": "Python Debugger: Linear Issues Fetch",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/linear_fetch.py",
            "console": "integratedTerminal",
            "args": [
                "--fetch=issues",
                # Note this is a random UUID as an example
                "--team=57c92ffc-4c0b-4d61-a2b1-a543ff7b9f37",
                "--limit=100",
                "--format=table"
            ]
        },
        {
            "name": "Python Debugger: Linear Single Issue Fetch",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/linear_fetch.py",
            "console": "integratedTerminal",
            "args": [
                "--issue=XZY-123",
                "--format=json"
            ]
        }
    ]
}